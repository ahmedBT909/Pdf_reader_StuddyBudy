<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item> <!-- اللون الذي يظهر النص على اللون الرئيسي -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorlogo</item> <!-- اللون الذي يظهر النص على اللون الثانوي -->

        <!-- Status bar color for better visibility -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/black</item>

        <!-- Background color for the app -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Accent color for interactive elements -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Button color (for example, in your Select PDF button) -->
        <item name="colorButtonNormal">@color/colorAccent</item>

        <!-- Text color -->
        <item name="android:textColor">@color/colorlogo</item>

        <!-- Customize your theme here. -->
    </style>
</resources>
